<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/contraintCaptura"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:visibility="invisible"
    android:background="#fff"
    android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivCapturaPokemon"
        style="@style/pokemonCaptura"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnCapturaConfirmar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/defaultBtn"
        android:text="Confirmar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvCapturaMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textoPrimario"
        android:text="Moltes escapou!"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/ivCapturaPokemon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabCompartlhar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_share"/>




</android.support.constraint.ConstraintLayout>