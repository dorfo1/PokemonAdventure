<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent">

        <ImageView
                style="@style/pikachuImage"
                android:id="@+id/img_sobre" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="Luiz Monteiro Maia Júnior"
                style="@style/defaultTxt"
                android:id="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/img_sobre"
                app:layout_constraintStart_toStartOf="@+id/img_sobre"
                app:layout_constraintEnd_toEndOf="@+id/img_sobre"
                android:layout_marginTop="50dp"
                />
        <TextView
                android:text="Martin Schwans"
                style="@style/defaultTxt"
                android:id="@+id/textView6" app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintEnd_toEndOf="@+id/textView5"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintTop_toBottomOf="@+id/textView5" android:layout_marginTop="30dp"
        />
        <TextView
                android:text="João Pedro Lopes"
                style="@style/defaultTxt"
                android:id="@+id/textView7" app:layout_constraintStart_toStartOf="@+id/textView6"
                app:layout_constraintEnd_toEndOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                android:layout_marginTop="30dp"/>
        <TextView
                android:text="Rodolfo Bacocina"
                style="@style/defaultTxt"
                android:id="@+id/textView8"
                app:layout_constraintStart_toStartOf="@+id/textView7"
                app:layout_constraintEnd_toEndOf="@+id/textView7"
                android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/textView7"
        />
        <TextView
                android:text="Versão 1.0.0"
                style="@style/defaultTxt"
                android:id="@+id/textView9"
                app:layout_constraintEnd_toEndOf="@+id/textView8"
                app:layout_constraintStart_toStartOf="@+id/textView8"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.49"
                android:layout_marginBottom="30dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView8"
                app:layout_constraintVertical_bias="1.0"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>